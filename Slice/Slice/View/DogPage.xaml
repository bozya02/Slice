<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slice.View.DogPage">
    <StackLayout>
        <Entry x:Name="entName" Placeholder="Имя" Text="{Binding Name}"/>
                                
        <Entry x:Name="entDesc" Placeholder="Описание" Text="{Binding Description}"/>

        <DatePicker x:Name="dpBirthday" Date="{Binding Birthday}"/>

        <Button x:Name="btnSave" Text="Сохранить" Clicked="btnSave_Clicked"/>
    </StackLayout>
</ContentPage>